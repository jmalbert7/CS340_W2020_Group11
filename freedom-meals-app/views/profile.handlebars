  <!-- Page Content -->
  <div class="container">
  
    <div class="row" id="header">
      <div class="col-md-8 mb-5">
        <h2>View and Manage Your Profile Information</h2>
        <hr>
		<p>Table will be built using JavaScript. Table will be populated with data extracted from JSON string received from backend server via a SELECT command to Customers table WHERE customer_id = this.customer_id.</p>
	  </div>
    </div>
    <!-- /.row -->

    <div class="row" id="customerInformationSection">
      <div class="col-md-8 mb-5">
		<table class="table">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email Address</th>
					<th>Password</th>
					<th>Phone Number</th>
					<th>Admin?</th>
				</tr>
			</thead>
			<tbody>
				<tr>
                    {{#each customerInfo}}
                    {{#if first_name}}
					<td>{{first_name}}</td>
					<td>{{last_name}}</td>
					<td>{{email}}</td>
					<td>********</td>
					<td>{{phone}}</td>
					<td>{{admin}}</td>
                    {{/if}}
                    {{/each}}
				</tr>
			</tbody>
		</table>
		<!--Change <a></a> to <button></button>. When button is clicked, open a popup form. 
		SOURCE: https://www.w3docs.com/snippets/javascript/how-to-create-a-popup-form-with-css-and-javascript.html-->
		<button class="btn btn-primary" id="editCustomerButton">Edit My Information</button>
      	<br><br>
		<p><strong>NOTE: </strong>If you are wanting to update your address or payment information, please send an email to the administrator at nelson@freedommeals.com.</p>
	  </div>
    </div>
    <!-- /.row -->

	<div class="row" id="editCustomerForm">
	  <form> <!--Form modifed from a template at https://getbootstrap.com/docs/4.0/components/forms/-->
		<h5>Your Information</h5>
		<div class="form-row">
		  <div class="form-group col-md-6">
			<label for="inputFirstName">First Name</label>
			<input type="text" class="form-control" id="firstName">
		  </div>
		  <div class="form-group col-md-6">
			<label for="inputLastName">Last Name</label>
			<input type="text" class="form-control" id="lastName">
		  </div>
		</div>
		<div class="form-row">
		  <div class="form-group col-md-6">
			<label for="inputEmail">Email</label>
			<input type="email" class="form-control" id="email">
		  </div>
		  <div class="form-group col-md-6">
			<label for="inputPhoneNumber">Phone Number</label>
			<input type="text" class="form-control" id="phoneNumber">
		  </div>
		</div>
		<div class="form-row">
		  <div class="form-group col-md-6">
			<label for="inputPassword">Change Your Password</label>
			<input type="password" class="form-control" id="password" placeholder="Type in current password if you do not want to change your password.">
		  </div>
		</div>
		<button type="submit" class="btn btn-primary" id="updateCustomerButton">Update My Information</button>
		<span>On click, send UPDATE command to Customers table WHERE customer_id = this.customer_id. The above table repopulates with updated information.</span>
	  </form>
	  <br><br>
	</div>
    <!-- /.row -->

  </div>
