<!-- Page Content -->
<div class="container">

  <div class="row" id="header">
    <div class="col-md-8 mb-5">
      <h2>View and Manage Your Recipe Ratings</h2>
      <hr>
      <p>Table will be built using JavaScript. Table will be populated with data extracted from JSON string received
        from backend server. Send SELECT command to Recipes Rating table WHERE customer_id = this.customer_id.</p>
    </div>
  </div>
  <!-- /.row -->

  <div class="row" id="ratingHistorySection">
    <div class="col-md-8 mb-5">
	  <table class="table">
		<thead>
		  <tr>
			<th>Recipe Name</th>
			<th>Rating</th>
			<th>Date Rated</th>
			<th>Action</th>
		  </tr>
		</thead>
		<tbody>
		  {{#each recipeRatings}}
		  {{#if rating}}
		  <tr>
			<td id="recipeName">{{recipe_name}}</td>
			<td>{{rating}}</td>
			<td>{{date_rated}}</td>
			<td><button type="submit" id={{recipe_id}} onClick="appear(this, 1);" class="btn btn-primary">Edit Rating</button></td>
		  </tr>
		  {{else}}
		  <tr>
			<td id="recipeName">{{recipe_name}}</td>
			<td>{{rating}}</td>
			<td>{{date_rated}}</td>
			<td><button type="submit" id={{recipe_id}} onClick="appear(this, 2);" class="btn btn-primary">Add Rating</button></td>
		  </tr>
		  {{/if}}
		  {{/each}}
		</tbody>
	  </table>
      <br>
    </div>
  </div>
  <!-- /.row -->
  
  <div class="row" id="ratingForm">
	<form action = "/rating/add" method = "post">
	  <h5>Add or Change Your Rating</h5>
	  <div class="form-row">
		  <div class="form-group col-md-6">
			<label for="inputRating" id="ratingPrompt"></label>
			<input type="text" id="rating_type" name="ratingType"></input>
			<input type="text" id="recipe_id" name="recipeID"></input>
			<select id="recipe_rating" class="form-control" name="rating">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		  </div>
	  </div>
	  <div class="form-row">
		<div class="form-group col-md-6">
			<button type="submit" class="btn btn-primary" id="submitRating">Submit My Rating</button>
		</div>
	  </div>
	</form>
	  <br><br>
  </div>
  <!-- /.row -->

</div>
